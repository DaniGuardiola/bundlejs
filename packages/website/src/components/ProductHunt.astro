---
import Anchor from "./Anchor";
export interface Props {
  class?: string
}
const { class: className = "" } = Astro.props;
---

<Anchor 
  class={"umami--click--product-hunt-badge " + className}
  href="https://www.producthunt.com/posts/bundle-6?utm_source=badge-featured&amp;utm_medium=badge&amp;utm_souce=badge-bundle-6"
  external={false}>
  <figure width="250" height="54">
    <img class="hidden dark:block"
      src="https://api.producthunt.com/widgets/embed-image/v1/featured.svg?post_id=300568&amp;theme=dark"
      alt="Product hunt badge" loading="lazy" width="250" height="54" />

    <img class="block dark:hidden"
      src="https://api.producthunt.com/widgets/embed-image/v1/featured.svg?post_id=300568&amp;theme=light"
      alt="Product hunt badge" loading="lazy" width="250" height="54" />
  </figure>
</Anchor>