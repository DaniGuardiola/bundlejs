---
export interface Props {
  title?: string;
  subtitle?: string;
  mobile?: string;
}

let {
  title = "bundlejs",
  subtitle = "a quick npm package size checker",
  mobile = "quick npm package"
} = Astro.props as Props;
---
<header>
  <h1>{title}</h1>
  <p class="hidden sm:block">{subtitle}</p>
  <p class="hidden lt-sm:block">{mobile}</p>
</header>

<style lang="scss">
  header {
    @apply flex flex-col gap-2 text-center;
    @apply pt-12 pb-3;

    h1 {
      @apply pt-0 font-600;
    }

    p {
      @apply text-lg sm:px-12;
    }
  }
</style>