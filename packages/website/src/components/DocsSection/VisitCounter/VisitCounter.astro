---
import Anchor from "../../Anchor";
import Counter from "./Counter";
---

<div class="visit-counter">
  <Anchor class="umami--click--public-analytics-link" href="https://analytics.bundlejs.com/share/jWI51PxZ/bundle">
    <Counter client:load />
  </Anchor>
</div>

<style lang="scss">
  .visit-counter {
    @apply text-center;
  }

  [custom-anchor] {
    @apply bg-gray-100 px-4 py-2 rounded-md;
    @apply text-secondary;
    @apply no-underline;
  }

  @at-root :global(.dark) {
    [custom-anchor] {
      @apply bg-elevated text-primary;
    }
  }
</style>