---
import BaseLayout from "./BaseLayout.astro";
import Container from "../components/Container";

let opts = Astro?.props?.content ?? Astro?.props;
---

<BaseLayout {...opts}>
  <Container class="col main-container">
    <slot />
  </Container>
</BaseLayout>

<style lang="scss">
  [custom-container] {
    @apply flex flex-col gap-6;
    @apply pt-10 pb-12;

    :global(h1) {
      @apply font-600;
      @apply pt-6 mb-2;
      @apply text-5xl text-center;
    }

    :global(h2) {
      @apply text-2xl;
      @apply pt-8;

      @at-root :global(.dark) [custom-container] {
        :global(h2) {
          @apply font-500;
        }
      }
    }

    :global(p) {
      @apply text-lg;
    }
  }
</style>