    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./@types"
    },
    "includes": [
        "src/**/*"
    ],
    "exclude": [
        "src/plugins/analyzer/**/*",

        "node_modules",
