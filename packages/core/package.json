{
  "name": "@bundlejs/core",
  "version": "0.0.0",
  "access": "public",
  "type": "module",
  "description": "An animation library for the modern web which utilizes the Web Animation API (WAAPI) to create butter smooth animation.",
  "typedocMain": "src/index.ts",
  "types": "@types/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.mjs",
      "default": "./lib/index.js"
    },
    "./lib/*": "./lib/*",
    "./types/*": "./@types/*",
    "./@types/*": "./@types/*",
    "./src/*": "./src/*",
    "./deno/*": "./src/deno/*",
    "./plugins/*": "./src/plugins/*",
    "./utils/*": "./src/utils/*",
    "./configs/*": "./src/configs/*",
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "src",
    "@types"
  ],
  "scripts": {
    "build:wasm": "esno ./scripts/build-wasm.ts",
    "build:schema": "esno ./scripts/build-schema.ts",
    "build:scripts": "pnpm build:wasm && pnpm build:schema",
    "build:all": "ultra build:scripts && pnpm build",
    "build": "vite build",
    "dev": "vite",
    "test:run": "vitest run && pnpm deno",
    "test": "vitest",
    "repl": "esno repl.ts",
    "deno": "deno run --allow-net --allow-env --allow-read --allow-write --allow-run ./repl.ts",
    "dts": "del-cli @types/ && tsc --project dts.tsconfig.json",
    "verify": "pnpm dts && pnpm test:run",
    "pre-release": "ultra build:all && ultra verify"
  },
  "ultra": {
    "concurrent": [
      "build:scripts",
      "verify",
      "test:run"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/okikio/bundlejs.git",
    "directory": "packages/core"
  },
  "keywords": [
    "modern",
    "bundlejs",
    "bundle size checker",
    "esbuild-wasm",
    "gzip",
    "brotli",
    "deno",
    "bundler",
    "treeshake",
    "bundlephobia",
    "cdn",
    "github",
    "skypack",
    "unpkg",
    "compressed",
    "jsx",
    "minify",
    "typescript"
  ],
  "author": {
    "name": "Okiki Ojo",
    "email": "hey@okikio.dev",
    "url": "https://okikio.dev"
  },
  "bugs": {
    "url": "https://github.com/okikio/bundlejs/issues"
  },
  "homepage": "https://bundlejs.com",
  "dependencies": {
    "@okikio/emitter": "^2.1.7",
    "esbuild": "^0.15.2",
    "esbuild-wasm": "^0.15.2",
    "rollup": "^2.77.3",
    "solid-js": "^1.4.8"
  },
  "devDependencies": {
    "@types/node": "^18.7.3",
    "@vitest/ui": "^0.21.1",
    "del-cli": "^5.0.0",
    "esno": "^0.16.3",
    "pnpm": "^7.9.0",
    "typescript": "^4.7.4",
    "typescript-json-schema": "^0.54.0",
    "ultra-runner": "^3.10.5",
    "vite": "^3.0.7",
    "vitest": "^0.21.1"
  }
}