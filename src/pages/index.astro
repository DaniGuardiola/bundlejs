---
import BaseLayout from '../layouts/BaseLayout.astro';

import Container from "../components/Container.astro";
import SearchContainer from "../components/SearchSection/SearchContainer";
import Editor from "../components/EditorSection/Editor.astro";
// import EditorSection from "../components/EditorSection/EditorSection.astro";

import { Content as Docs } from "../components/DocsSection/Docs.md";
import IntroHeader from "../components/IntroHeader.astro";
---

<BaseLayout>
