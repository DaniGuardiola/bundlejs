mixin navbar
  nav.navbar
    .navbar-bg
      .container
        .navbar-shadow
    .navbar-bg
      .container
        .navbar-border
    .container
      .navbar-frame
        a.navbar-logo(href='/').flex.gap-2
          img(src="/favicon/favicon.svg", alt="The bundlejs.com logo" width="24" height="28" loading="eager" fetchpriority="high")
          span(aria-hidden="true") bundlejs
