mixin navbar
  nav.navbar
    .navbar-bg
      .container
        .navbar-shadow
    .navbar-bg
      .container
        .navbar-border
    .container
      .navbar-frame
        a.navbar-logo(href='./') bundle
        section
          a.btn.mr-2(href="./about") About
          a.btn.mr-2(href="./faq") FAQ
          a.btn.mr-2(href="https://github.com/okikio/bundle" target="_blank" rel="noopener") Github
          button.theme-toggle(type='button')
            span.icon dark_mode
