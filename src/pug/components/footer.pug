mixin footer
  footer.footer.my-6
    .container.flex.flex-wrap.gap-2(class="flex-col sm:flex-row")
      .flex.flex-grow
        div(class="lt-sm:space-y-2")
          label(for="pet-select") Change Theme:

          select.theme-options(name="Theme Selector")
            option(value="system" selected) System
            option(value="light") Light
            option(value="dark") Dark
          span.ml-2
          button#reset-cache.btn.btn-highlight(type="button" title="Clear Cache / Force Reload Site")
            svg.icon(viewbox='0 0 24 24' version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink')
              path(d='M12 4.5a7.5 7.5 0 1 0 7.419 6.392c-.067-.454.265-.892.724-.892.37 0 .696.256.752.623A9 9 0 1 1 18 5.292V4.25a.75.75 0 0 1 1.5 0v3a.75.75 0 0 1-.75.75h-3a.75.75 0 0 1 0-1.5h1.35a7.474 7.474 0 0 0-5.1-2Z' fill="currentColor")
          
        .flex-grow(class="text-right")
          div.px-4.py-2.inline-block (c) #[span=`${new Date().getFullYear()}`] #[a(href='https://okikio.dev' target='_blank' rel="noopener") Okiki Ojo] 
      .flex-grow
      div.flex.flex-wrap.gap-2.justify-end
        p.bg-gray-200(class="dark:bg-quaternary").inline-block.px-4.py-2.rounded-md
          span="  Made by "
          //- a(href='https://okikio.dev' target='_blank' rel="noopener") Okiki Ojo
          //- |  (
          a(href='https://github.com/okikio' target='_blank'  rel="noopener") @okikio
          //- | ).
