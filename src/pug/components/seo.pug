mixin seo(page, defaults)
  - let { title, url, description, websiteURL, keywords } = page;

  meta(name="og:locale" content="en_Us")
  meta(property="og:type" content="website")
  meta(name="keywords", content=keywords)

  meta(property="article:author" content="Okiki Ojo")
  meta(property="og:site_name" content=websiteURL.replace("https://", ""))

  meta(name="contact" content="hey@okikio.dev")

  meta(property='image' content=`${websiteURL}/favicon/social-preview.png`)
  meta(property='og:image' content=`${websiteURL}/favicon/social-preview.png`)

  meta(name="twitter:card" content="summary_large_image")
  
  meta(name="twitter:image" content=`${websiteURL}/favicon/social-preview.png`)
  meta(property="twitter:image:alt" content="An image of bundle's logo.")
  
  meta(name='twitter:url' content=`${websiteURL}${url}`)
  meta(name="twitter:site", content="@okikio_dev")
  meta(name="twitter:creator" content="@okikio_dev")

  block title
    title= title
  meta(name='title' content=title)
  meta(itemprop='name' content=title)
  meta(property='og:title' content=title)
  meta(name='twitter:title' content=title)
  meta(name="apple-mobile-web-app-title", content=title)

  link(rel="home", href=`/`)
  link(rel="relative-url", href=`${url}`)
  link(rel="canonical" href=`${websiteURL}${url}`)
  meta(itemprop='url' content=`${websiteURL}${url}`)
  meta(name="shortlink" content=`${websiteURL}${url}`)
  meta(property='og:url' content=`${websiteURL}${url}`)

  meta(name='description' content=description)
  meta(property='og:description' content=description)
  meta(property='twitter:description' content=description)
  meta(itemprop='description' content=description)

  meta(name="web-author" content="Okiki Ojo")

  script(type="application/ld+json").
    {
      "@context":"https://schema.org",
      "@graph":[
        {
          "@type":"Organization",
          "@id":"#{defaults.websiteURL}/#organization",
          "name":"bundle",
          "url":"#{defaults.websiteURL}",
          "sameAs":[
            "https://www.producthunt.com/posts/bundle-6",
            "https://bundle.js.org",
            "https://bundlesize.com",
            "https://github.com/okikio/bundle",
            "https://okikio.github.io/bundle",
            "https://bestofjs.org/projects/bundle"
          ],
          "description":"#{defaults.description}",
          "logo":{
            "name":"bundle",
            "@type":"ImageObject",
            "@id":"#{defaults.websiteURL}/#logo",
            "url":"#{defaults.websiteURL}/favicon/android-chrome-512x512.png",
            "width":512,
            "height":512,
            "caption":"bundle's logo"
          },
          "contactPoint":[
            {
              "@type":"ContactPoint",
              "url":"#{defaults.websiteURL}",
              "email":"mailto:hey@okikio.dev",
              "contactType":"customer service"
            }
          ]
        },
        {
          "@type":"WebSite",
          "@id":"#{defaults.websiteURL}/#website",
          "url":"#{defaults.websiteURL}",
          "description":"#{defaults.description}",
          "logo":{
            "name":"bundle",
            "@type":"ImageObject",
            "@id":"#{defaults.websiteURL}/#logo",
            "url":"#{defaults.websiteURL}/favicon/android-chrome-512x512.png",
            "width":512,
            "height":512,
            "caption":"bundle's logo"
          },
          "contactPoint":[
            {
              "@type":"ContactPoint",
              "url":"#{defaults.websiteURL}",
              "email":"mailto:hey@okikio.dev",
              "contactType":"customer service"
            }
          ],
          "sameAs":[
            "https://www.producthunt.com/posts/bundle-6",
            "https://bundle.js.org",
            "https://bundlesize.com",
            "https://github.com/okikio/bundle",
            "https://okikio.github.io/bundle",
            "https://bestofjs.org/projects/bundle"
          ],
          "mainEntityOfPage":{
            "@type":"WebPage",
            "@id":"#{defaults.websiteURL}/index.html#main",
            "lastReviewed":"Mon October 11 2021 16:00:00 GMT-0400"
          },
          "about":{
            "@id":"#{defaults.websiteURL}/about.html"
          },
          "name":"bundle",
          "publisher":{
            "@id":"https://github.com/okikio"
          },
          "copyrightYear":"2021",
          "copyrightHolder":[
            {
              "@id":"https://github.com/okikio"
            }
          ]
        },
        {
          "@type":"WebPage",
          "@id":"#{page.websiteURL + page.url}#webpage",
          "url":"#{page.websiteURL + page.url}",
          "description":"#{page.description}",
          "inLanguage":"en",
          "name":"#{page.title}",
          "isPartOf":{
            "@id":"#{defaults.websiteURL}/#website"
          },
          "about":{
            "@id":"#{defaults.websiteURL}/about.html"
          }
        }
      ]
    }
    