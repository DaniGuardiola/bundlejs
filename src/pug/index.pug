extends /layouts/layout.pug

block content
  .container
    header
      h1 bundle
      p a quick npm package size checker
    
    .search
      i.icon search
      input#search-input(type="search" autocomplete="off" placeholder="Type a package name...")

    .card
      section.content
        h3.font-semibold.text-lg 
          a(href="./") @okikio/native
        p A framework who's goal is to make it easier to create complex, light-weight, and performant web applications using modern js apis.
        p.updated-time Updated January 23, 2021 by 
          a(href="./") @okikio
          | .
      section.file-size
        .self-center
          h4.font-bold.text-lg 7 KB
          p.uppercase Minified + Gzipped

