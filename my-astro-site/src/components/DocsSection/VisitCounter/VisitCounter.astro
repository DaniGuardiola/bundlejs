---
import Anchor from "../../Anchor.astro";
import HitCounter from "./HitCounter";
---
<div class="visit-counter">
  <Anchor class="umami--click--public-analytics-link" href="https://analytics.bundlejs.com/share/jWI51PxZ/bundle">
    <HitCounter client:load />
  </Anchor>
</div>

<style lang="scss">
  .visit-counter {
    @apply text-center;
  }

  [custom-anchor] {
    @apply bg-gray-100 bg-elevated px-4 py-2 rounded-md;
  }
</style>